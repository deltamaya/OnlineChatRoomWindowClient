<Window x:Class="ChatRoom.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom"
        mc:Ignorable="d"
        Title="Signup" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="uname_box" HorizontalAlignment="Center" Margin="0,0,0,100" FontFamily="consolas" TextWrapping="Wrap" Text="username" VerticalAlignment="Center" Width="200" Height="30"/>
        <TextBox x:Name="pwd_box" HorizontalAlignment="Center" Margin="0,0,0,0" FontFamily="consolas" TextWrapping="Wrap" Text="password" VerticalAlignment="Center" Width="200" Height="30"/>
        <Button x:Name="signup" Height="30" Width="90" Content="signup" FontFamily="consolas" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Center" Click="signup_Click"/>
        <Label Content="Online ChatRoom" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" FontFamily="consolas"/>
    </Grid>
</Window>
